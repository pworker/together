<h1><%= t(".title") %></h1>

<table class="table">
  <thead>
    <tr>
      <th> <%= Event.human_attribute_name(:name) %> </th>
      <th> <%= Event.human_attribute_name(:description)%> </th>
      <th> <%= Event.human_attribute_name(:start_at) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start_at %></td>
        <td>
          <div class="btn-group">
            <%= link_to t(".Attend"), new_event_attendee_path(event), :class => "btn" %>
            <%= link_to t(".Show"), event, :class => "btn"%>
            <%= link_to t('.Edit'), edit_event_path(event), :class =>"btn" %>
            <%= link_to t('.Destroy'), event, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"btn" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.New Event'), new_event_path, :class => "btn btn-primary" %>
