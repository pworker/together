<h1><%= t(".title") %></h1>

<table>
  <thead>
    <tr>
      <th> <%= Event.human_attribute_name(:name) %> </th>
      <th> <%= Event.human_attribute_name(:description)%> </th>
      <th> <%= Event.human_attribute_name(:start_at) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.start_at %></td>
        <td><%= link_to t(".Attend"), new_event_attendee_path(event)%></td>
        <td><%= link_to t(".Show"), event %></td>
        <td><%= link_to t('.Edit'), edit_event_path(event) %></td>
        <td><%= link_to t('.Destroy'), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

